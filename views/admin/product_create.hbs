  <script>
  function myFunction() {
        <!-- Here the class ql-editor is defined by quill js, we can access the inner html from here -->
        var editor = document.getElementsByClassName('ql-editor')[0].innerHTML
        var about = document.querySelector('input[name=about]');
        about.value = editor
    };

    //Configuring quill
    var quill = new Quill('#editor', {
        theme: 'snow'
    });

    function previewImages(event) {
      const fileInput = event.target;
      const imagePreview = document.getElementById('imagePreview');
      imagePreview.innerHTML = '';

      for (let i = 0; i < fileInput.files.length; i++) {
        const file = fileInput.files[i];
        const reader = new FileReader();

        reader.onload = function (e) {
          const img = document.createElement('img');
          img.src = e.target.result;
          imagePreview.appendChild(img);
        };

        reader.readAsDataURL(file);
      }
    }

    /// sub category
    function handleCategoryChange() {
    var categorySelect = document.getElementById("sub_category");
    var subcategorySelect = document.getElementById("product_sub_category");

    // Clear previous options
    subcategorySelect.innerHTML = "";

    // Get the selected category ID
    var categoryId = categorySelect.value;

    if (categoryId !== "") {
      // Make an AJAX request to the server
      debugger;
      fetch(`/admin/subcategories?categoryId=${categoryId}`)
      .then(response => response.json())
        .then(data => {
          // Add options based on the response data
          data.forEach(function(subcategory) {

            var option = document.createElement("option");
            option.value = subcategory.id;
            option.text = subcategory.type;
            subcategorySelect.appendChild(option);
          });

          // Show the subcategory select element
          subcategorySelect.style.display = "block";
        })
        .catch(error => console.error(error));
    } else {
      // Hide the subcategory select element if no category is selected
      subcategorySelect.style.display = "none";
    }
  }
  </script>

