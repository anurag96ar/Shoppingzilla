  <script>
    $(document).on("click", ".delete", async function () {
     

      const result = await Swal.fire({
        title: 'Do you want to delete the item?',
        showCancelButton: true,
        confirmButtonText: 'Yes',
      
      })

      if (result.value) {
         $(this).parents("tr").remove();
      debugger;
      var dataId = $(this).parents("tr").find('td').eq(0).attr("value");
      console.log(dataId);

        fetch(`deleteCartItem?dataId=${dataId}`, {
          method: 'DELETE',
        })
          .then(response => response.json())
          .then(data => {
            location.reload()
          })
          
          .catch(error => { console.error(error) });

      }
      else {
        event.stopPropagation();
        event.preventDefault();
      };

      location.reload()
    });

  </script>
  <script>
    function handleQuantityChange() {
      var inputValue = $('#quantity').val();
      var dataId = $("tr").find('td').eq(0).attr("value")
      debugger;

      fetch(`updateCart?dataId=${dataId}&quantity=${inputValue}`, {
        method: 'POST',
      })
        .then(response => response.json())
        .then(data => {
          location.reload()
        })
        .catch(error => { console.error(error) });
      location.reload()
    }

    function validateInput(data) {
      console.log(data)
         debugger;
      var input = document.getElementById('quantity');
      if (input.value === '0' ) {
        input.value = '1';
      }
      var integerValue = parseInt(input.value, 10);
      if(integerValue>data.toString()  ){
          input.value = data;
      }
    }

  </script>
