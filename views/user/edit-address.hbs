                <li class="breadcrumb-item"><a href="homePage">Home</a></li>
                <li aria-current="page" class="breadcrumb-item active">Edit - Address</li>
              </ol>
            </nav>
          </div>
          <div id="checkout" class="col-lg-12">
            <div class="box">
              <form method="post" action="updateAddress?addressId={{address._id}}">
                <h1>Edit - Address</h1>
             
                <div class="content py-3">


                  <div class="form-group">
                    <label for="firstname">Receiver Name</label>
                    <input id="firstname" type="text" class="form-control" name="receiver_name" value="{{address.receiverName}}">
                  </div>


                  <div class="form-group">
                    <label for="lastname">Complete Address</label>
                    <input id="lastname" type="text" class="form-control" name="complete_address" value="{{address.completeAddress}}">
                  </div>

                  <div class="form-group">
                    <label for="lastname">LandMark</label>
                    <input id="lastname" type="text" class="form-control" name="landmark" value="{{address.landMark}}">
                  </div>

                </div>
               
                <div class="box-footer d-flex justify-content-between">
                  <a href="checkout" class="btn btn-outline-secondary"><i class="fa fa-chevron-left"></i>Back to Checkout</a>
                  <button type="submit" class="btn btn-primary">Update Address<i
                      class="fa fa-chevron-right"></i></button>
                </div>
              </form>
            </div>
            <!-- /.box-->
          </div>
          <!-- /.col-lg-9-->
         
          <!-- /.col-lg-3-->
        </div>
      </div>
